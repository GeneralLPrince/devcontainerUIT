{
    "name": "custom-devcontainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "formulahendry.code-runner",
                "ms-vscode.cpptools-theme",
                "ritwickdey.LiveServer"
            ],
            "settings": {
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000,
                "code-runner.runInTerminal": true
            }
        }
    }
}
